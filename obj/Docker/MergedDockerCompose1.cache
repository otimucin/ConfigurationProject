services:
  configurationproject:
    build:
      context: C:\Users\otimucin\Documents\Visual Studio 2017\Projects\ConfigurationProject\ConfigurationProject
      dockerfile: Dockerfile
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: configurationproject:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  bin/Debug/netcoreapp2.0/ConfigurationProject.dll'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/bash -c "if PID=$$(pidof
        -x dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - 8035:80/tcp
    - 80/tcp
    volumes:
    - C:\Users\otimucin\Documents\Visual Studio 2017\Projects\ConfigurationProject\ConfigurationProject:/app:rw
    - C:\Users\otimucin\vsdbg\vs2017u5:/remote_debugger:ro
    - C:\Program Files (x86)\Microsoft SDKs\NuGetPackagesFallback:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\otimucin\.nuget\packages:/root/.nuget/packages:ro
  db:
    command: --auth
    image: mongo
    ports:
    - 27017:27017/tcp
    volumes:
    - C:\Users\otimucin\Documents\Visual Studio 2017\Projects\ConfigurationProject:/setup:rw
version: '3.0'